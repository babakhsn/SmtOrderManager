@page
@model SmtOrderManager.Web.Pages.Account.LoginModel
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
        body { font-family: sans-serif; padding: 40px; }
        .box { max-width: 360px; margin: auto; border: 1px solid #ddd; padding: 20px; border-radius: 8px; }
        .row { margin-bottom: 12px; }
        input { width: 100%; padding: 8px; }
        button { padding: 8px 12px; }
        .err { color: #b00020; margin-bottom: 12px; }
    </style>
</head>
<body>
    <div class="box">
        <h2>SMT Order Manager</h2>

        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="err">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="row">
                <label>Username</label>
                <input asp-for="Input.Username" />
                <span asp-validation-for="Input.Username"></span>
            </div>
            <div class="row">
                <label>Password</label>
                <input asp-for="Input.Password" />
                <span asp-validation-for="Input.Password"></span>
            </div>
            <button type="submit">Login</button>
        </form>
    </div>
</body>
</html>
